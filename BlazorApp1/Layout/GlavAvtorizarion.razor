        var parts = fullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 0) return "??";

        string first = parts[0][0].ToString();
        string last = parts.Length > 1 ? parts[^1][0].ToString() : "";

        return $"{first}{last}".ToUpper();
    }

