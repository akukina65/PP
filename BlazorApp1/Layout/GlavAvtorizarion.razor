<style>
    /* Обновленные фиолетовые стили для значков */
    :root {
        --primary-color: #6C63FF;
        --secondary-color: #5A52E0;
        --icon-color: #6C63FF;
    }

    /* Иконки в категориях */
    .category-icon svg {
        stroke: var(--primary-color);
    }

    /* Иконки в профиле пользователя */
    .menu-item i {
        color: var(--primary-color);
    }

    .menu-item:hover i {
        color: var(--secondary-color);
    }

    .logout i {
        color: #e53935 !important;
    }

    .menu-item.logout:hover i {
        color: #c62828 !important;
    }

    /* Иконка поиска */
    .search-btn svg {
        stroke: white;
    }

    .search-btn:hover svg {
        stroke: white;
    }

    /* Иконки в отзывах */
    .testimonial-content::before {
        color: var(--primary-color);
    }

    .author-avatar {
        background: var(--primary-color);
    }

    /* Иконки в футере */
    .footer-column h4::after {
        background: var(--primary-color);
    }

    .footer-column ul li a:hover {
        color: var(--primary-color);
    }

    /* Мобильное меню */
    .mobile-menu-btn svg {
        stroke: var(--primary-color);
    }

    .mobile-nav-link.active {
        color: var(--primary-color);
    }

    .mobile-menu-item.logout {
        color: #e53935;
    }

    /* Остальные стили без изменений */
    .search-container input {
        padding: 0.8rem 1rem;
        font-size: 0.9rem;
    }

    .search-btn {
        padding: 0 1rem;
    }

    .categories-section h2,
    .featured-courses h2,
    .testimonials-section h2 {
        font-size: 1.5rem;
    }

    .footer-container {
        grid-template-columns: 1fr;
    }

    .user-section {
        position: relative;
    }

    .user-profile {
        display: flex;
        align-items: center;
        cursor: pointer;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #6C63FF;
    }

    .avatar-placeholder {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #6C63FF;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 16px;
    }

        .avatar-placeholder.large {
            width: 60px;
            height: 60px;
            font-size: 24px;
        }

    .profile-menu {
        position: absolute;
        top: 50px;
        right: 0;
        width: 280px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        z-index: 1000;
        overflow: hidden;
    }

    .profile-header {
        display: flex;
        align-items: center;
        padding: 20px;
        background: linear-gradient(to right, #6C63FF, #5A52E0);
        color: white;
    }

    .profile-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 15px;
        border: 2px solid white;
    }

    .profile-info {
        flex: 1;
    }

    .user-name {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .user-email {
        font-size: 0.85rem;
        opacity: 0.9;
    }

    .menu-items {
        padding: 10px 0;
    }

    .menu-item {
        display: flex;
        align-items: center;
        padding: 10px 20px;
        cursor: pointer;
        transition: background 0.2s;
    }

        .menu-item:hover {
            background: #f5f5f5;
        }

        .menu-item i {
            margin-right: 12px;
            width: 24px;
            text-align: center;
            font-size: 18px;
        }

    .menu-divider {
        height: 1px;
        background: #eee;
        margin: 8px 0;
    }

    .logout {
        color: #e53935;
    }

    /* Иконки */
    .icon-user:before {
        content: "👤";
    }

    .icon-camera:before {
        content: "📷";
    }

    .icon-trophy:before {
        content: "🏆";
    }

    .icon-logout:before {
        content: "🚪";
    }

    /* Мобильное меню профиля */
    .mobile-profile-menu {
        padding: 15px 0;
    }

    .mobile-menu-item {
        padding: 12px 20px;
        border-bottom: 1px solid #eee;
    }

    .mobile-menu-divider {
        height: 1px;
        background: #eaeaea;
        margin: 8px 0;
    }

    .mobile-menu-item.logout {
        color: #e53935;
        font-weight: 500;
    }
    /* Стили для раздела отзывов */
    .testimonials-section {
        padding: 4rem 1.5rem;
        background-color: #f8f9ff;
        border-radius: 20px;
        margin: 4rem auto;
        max-width: 1200px;
    }

    .testimonials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .testimonial-card {
        background: var(--card-bg);
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
    }

        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(108, 99, 255, 0.15);
        }

    .testimonial-content {
        position: relative;
        padding-left: 2rem;
        margin-bottom: 1.5rem;
        font-size: 1.05rem;
        line-height: 1.6;
        color: #4a5568;
    }

        .testimonial-content::before {
            content: """; position: absolute; left: 0;
            top: -20px;
            font-size: 4rem;
            color: var(--primary-color);
            opacity: 0.2;
            font-family: Georgia, serif;
        }

    .testimonial-author {
        display: flex;
        align-items: center;
    }

    .author-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--primary-color);
        opacity: 0.8;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        margin-right: 1rem;
    }

    .author-info h4 {
        margin: 0;
        font-size: 1.1rem;
        color: var(--text-color);
    }

    .author-info p {
        margin: 0;
        font-size: 0.9rem;
        color: #718096;
    }

    /* Стили для футера */
    .site-footer {
        background: #2D3748;
        color: white;
        padding: 4rem 1.5rem 2rem;
        margin-top: 4rem;
    }

    .footer-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .footer-column {
        margin-bottom: 2rem;
    }

        .footer-column h4 {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            position: relative;
            padding-bottom: 0.5rem;
        }

            .footer-column h4::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 40px;
                height: 2px;
                background: var(--primary-color);
            }

        .footer-column ul {
            list-style: none;
            padding: 0;
        }

            .footer-column ul li {
                margin-bottom: 0.8rem;
            }

                .footer-column ul li a {
                    color: #CBD5E0;
                    text-decoration: none;
                    transition: color 0.3s;
                    font-size: 0.95rem;
                }

                    .footer-column ul li a:hover {
                        color: var(--primary-color);
                    }

    .footer-bottom {
        text-align: center;
        padding-top: 3rem;
        margin-top: 3rem;
        border-top: 1px solid #4A5568;
        max-width: 1200px;
        margin: 3rem auto 0;
    }

        .footer-bottom p {
            color: #A0AEC0;
            font-size: 0.9rem;
        }

    /* Адаптивность */
    @@media (max-width: 768px) {
        .testimonials-grid {
            grid-template-columns: 1fr;
        }

        .footer-container {
            grid-template-columns: repeat(2, 1fr);
